<hr style="width:400px">

<div class="card" style="width:400px">
<figure class="figure">

    <!--<img src="https://getuikit.com/v2/docs/images/placeholder_600x400.svg" class="figure-img img-fluid rounded">-->
<% if user_signed_in? %>
    <div class="row home-header" style="margin-left:0px;">
      <div class="col-md-2 mr-auto" >
        <div class='round-image-50'>
            <%= image_tag posting.user.avatar.thumb.url, class: 'img-responsive' %>
       </div>
      </div>

      <div class="col-md-4 " style="margin-right:60px;">
        <h4 class="text-left " ><%= posting.user.name %></h4>
      </div>

      <div class="col-md-4 ml-auto-responsive" >
        <a class="btn btn-outline-light "   data-toggle="dropdown"   style="margin-left:25px;">
          <span class="caret" style="" >...</span>
        </a>
          <ul class="dropdown-menu">
            <li>
              <a><%= link_to 'Submit' , edit_posting_path(posting)%></a>
           </li>
            <li>
              <a><%= link_to 'Delete', posting, method: :delete, data: { confirm: 'Are you sure you want to delete this post?'}%></a>
            </li>
          </ul>
      </div>
      </div>
      <div class="col-md-4 mr-auto" style="margin-left:5px;">
        <h6 class="text-left ">  <%= posting.description %></h6>
      </div>

    <%= image_tag posting.picture.thumb.url, class: "img-responsive" %>
    <hr>

 <div class="row home-header" style="margin-left:15px;">

   <div class="level-item likes">
    <% if user_signed_in? %>
      <% if current_user.liked? posting %>
        <%= link_to unlike_posting_path(posting), method: :put, remote: true, class: "unlike_shot" do %>
          <span class="icon"><i class="fa fa-heart has-text-primary"></i>Like</span>
          <span class="vote_count"><%= posting.get_upvotes.size %></span>
        <% end %>
      <% else %>
        <%= link_to like_posting_path(posting), method: :put, remote: true, class: "like_shot" do %>
          <span class="icon"><i class="fa fa-heart"></i>Like</span>
          <span class="vote_count"><%= posting.get_upvotes.size  %></span>
        <% end %>
      <% end %>
      <% end %>
  </div>

    <div class="interna" >
        <h6 class="text-left " style="margin-left:50px;">COMENTAR</h6>
    </div>
    <div class="interna " >
        <h6 class="text-left " style="margin-left:35px;">COMPARTILHAR</h6>
    </div>
</div>


  <figcaption class="figure-caption">
      <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2" id="navbarNavPost">
          <ul class="navbar-nav mr-auto">
              <li class="nav-item ">

              </li>
              <li class="nav-item ">
                  <a><%= link_to 'Delete', posting, method: :delete, data: { confirm: 'Are you sure you want to delete this post?'}%></a>
              </li>
        </ul>
      </div>
  </figcaption>
      <% else %>
        <%= posting.description %>
        <%= image_tag posting.picture.thumb.url, class: "figure-img img-fluid rounded" %>
  <% end %>


</figure>
  </div>
